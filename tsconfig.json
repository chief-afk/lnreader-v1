{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "**/node_modules",
    "**/Pods",
    "babel.config.js",
    "metro.config.js"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "noUnusedLocals": true,
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "paths": {
      "@components": ["src/components/index"],
      "@components/*": ["src/components/*"],
      "@database/*": ["src/database/*"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks/index"],
      "@screens/*": ["src/screens/*"],
      "@strings/*": ["strings/*"],
      "@redux/*": ["src/redux/*"],
      "@theme/*": ["src/theme/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@sources/*": ["src/sources/*"]
    },
    "types": ["react-native"]
  }
}
